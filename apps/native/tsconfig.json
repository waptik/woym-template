{
	"extends": ["@woym/tsconfig/base.json"],
	"compilerOptions": {
		"allowJs": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		},
		"jsx": "react-native",
		"checkJs": false,
		"moduleSuffixes": [".ios", ".android", ".native", ""]
	},
	"include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts", "nativewind-env.d.ts", "polyfills.js"],
	"exclude": ["node_modules"]
}
