{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "@woym/tsconfig/vite.json",
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"strict": true,
		"lib": [
			"ESNext"
		],
		"types": [
			"@cloudflare/workers-types",
			"node"
		],
		"paths": {
			"@/*": [
				"./src/*"
			]
		},
		"jsx": "react-jsx",
		"outDir": "./dist",
		"jsxImportSource": "hono/jsx"
	},
	"include": [
		"**/*.ts"
	],
	"exclude": [
		"node_modules",
		"dist",
		"**/*.test.ts",
		"**/*.spec.ts"
	],
}