{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "@woym/tsconfig/vite.json",
	"compilerOptions": {
		"strict": true,
		"paths": {
			"@/*": [
				"./src/*"
			]
		},
		"types": [
			"./worker-configuration.d.ts",
			"node"
		],
		"jsx": "react-jsx",
		"jsxImportSource": "hono/jsx"
	},
	"include": [
		"**/*.ts"
	],
	"exclude": [
		"node_modules",
		"dist",
		"**/*.test.ts",
		"**/*.spec.ts"
	],
}