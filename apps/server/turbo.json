{
	"$schema": "https://turbo.build/schema.json",
	"extends": [
		"//"
	],
	"tasks": {
		"build": {
			"dependsOn": [
				"@woym/db#build",
				"@woym/auth#build",
				"@woym/api#build"
			],
			"outputs": [
				"dist/**"
			],
			"env": [
				".env.production.local",
				".env.production",
				".env.local",
				".env"
			]
		},
		"dev": {
			"outputs": [
				"dist/**"
			],
			"dependsOn": [
				"@woym/api#dev",
				"@woym/auth#dev",
				"@woym/db#dev"
			],
			"cache": false,
			"persistent": true,
			"interactive": true,
			"env": [
				".dev.vars",
				".env.production.local",
				".env.production",
				".env.local",
				".env"
			]
		}
	}
}