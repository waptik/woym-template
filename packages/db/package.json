{
	"name": "@woym/db",
	"private": true,
	"version": "0.1.0",
	"type": "module",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		},
		"./db": {
			"import": "./dist/db.js",
			"require": "./dist/db.cjs"
		},
		"./schema": {
			"import": "./dist/schema.js",
			"require": "./dist/schema.cjs"
		},
		"./utils": {
			"import": "./dist/utils.js",
			"require": "./dist/utils.cjs"
		},
		"./worker": {
			"import": "./dist/worker.js",
			"require": "./dist/worker.cjs"
		},
		"./package.json": "./package.json"
	},
	"license": "MIT",
	"scripts": {
		"build": "tsdown",
		"clean": "git clean -xdf .cache .turbo dist node_modules",
		"dev": "tsdown --watch",
		"d1:apply": "wrangler d1 migrations apply woym-database",
		"d1:apply:local": "pnpm run d1:apply --local",
		"db:push": "drizzle-kit push",
		"db:studio": "drizzle-kit studio",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"typecheck": "tsc --noEmit --emitDeclarationOnly false"
	},
	"dependencies": {
		"@t3-oss/env-core": "^0.13.8",
		"@woym/schemas": "workspace:*",
		"@woym/workers-types": "workspace:*",
		"drizzle-orm": "^0.44.3",
		"drizzle-zod": "^0.8.2",
		"zod": "^4.0.5"
	},
	"devDependencies": {
		"@types/node": "catalog:",
		"@woym/tsconfig": "workspace:*",
		"drizzle-kit": "^0.31.4",
		"tsdown": "catalog:",
		"typescript": "catalog:",
		"wrangler": "catalog:"
	},
	"main": "./dist/index.cjs",
	"module": "./dist/index.js",
	"types": "./dist/index.d.cts"
}