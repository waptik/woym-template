{
	"name": "@woym/db",
	"private": true,
	"version": "0.1.0",
	"type": "module",
	"exports": {
		".": "./dist/index.js",
		"./db-cli": "./dist/db-cli.js",
		"./schema": "./dist/schema.js",
		"./utils": "./dist/utils.js",
		"./package.json": "./package.json"
	},
	"license": "MIT",
	"scripts": {
		"cf-typegen": "wrangler types --env-interface CloudflareBindings",
		"clean": "git clean -xdf .cache .turbo dist node_modules",
		"db:migrate": "wrangler d1 migrations apply woymx-db --remote",
		"db:migrate:local": "wrangler d1 migrations apply woymx-db --local",
		"db:push": "drizzle-kit push",
		"db:studio": "drizzle-kit studio",
		"db:generate": "drizzle-kit generate",
		"typecheck": "tsc --noEmit --emitDeclarationOnly false"
	},
	"dependencies": {
		"@t3-oss/env-core": "^0.13.8",
		"@woym/schemas": "workspace:*",
		"drizzle-orm": "^0.44.3",
		"drizzle-zod": "^0.8.2",
		"zod": "^4.0.5"
	},
	"devDependencies": {
		"@types/node": "catalog:",
		"@woym/tsconfig": "workspace:*",
		"drizzle-kit": "^0.31.4",
		"typescript": "catalog:",
		"wrangler": "catalog:"
	},
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts"
}